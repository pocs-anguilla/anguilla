{
    "image": "condaforge/miniforge3",
    "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-vscode.cpptools",
        "jeff-hykin.better-cpp-syntax",
        "ms-vscode.cmake-tools",
        "twxs.cmake",
        "lextudio.restructuredtext"
    ],
    "postCreateCommand": "conda update -y --all && conda env create -f environment.yml",
    "forwardPorts": [
        8000,
        8888
    ]
}
